section
	padding-top 30px
	padding-bottom 30px

.business
	display flex
	justify-content center
	align-items center
	flex-wrap wrap
	a
		display block
		margin 10px 0
		figure
			img
				max-width 200px
		&:nth-child(2)
			figure
				img
					max-width 105px
		&:nth-child(5)
			figure
				img
					max-width 150px

#history
	.imgP
		max-width 250px
		width 100%
		display block
		margin 15px auto

.navbar-brand
	padding 0 !important
	img
		position relative
		top 10px
		width 150px
		@media screen and (max-width: 768px)
			width auto
			height 80%
			top 10%
			left 10%

.simulacrum
	img
		max-width 260px